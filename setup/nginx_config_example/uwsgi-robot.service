[Unit]
Description=uWSGI service for robot
After=syslog.target

[Service]
ExecStartPre=/bin/mkdir -m 775 /var/run/uwsgi
ExecStart=/usr/local/bin/uwsgi --ini /etc/uwsgi/robot.ini
Restart=always
KillSignal=SIGTERM
StandardError=syslog
Type=notify
NotifyAccess=all

[Install]
WantedBy=multi-user.target
